<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"


        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
>

    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent"
                    android:layout_weight="0.5">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent"
                            android:layout_weight="0.5" android:orientation="horizontal">
                <TextView
                        android:text="TextView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true" android:id="@+id/ID1" android:layout_marginTop="0dp"
                        android:layout_alignParentStart="true" android:layout_marginStart="0dp"
                        android:gravity="center"
                        android:textSize="30sp"
                        android:onClick="nesteMann"
                />
            </RelativeLayout>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent"
                            android:layout_weight="0.5" android:orientation="horizontal">
                <TextView
                        android:text="TextView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true" android:id="@+id/ID2" android:layout_marginTop="0dp"
                        android:layout_alignParentStart="true" android:layout_marginStart="0dp"
                        android:gravity="center"
                        android:textSize="30sp"
                        android:onClick="nesteMann"
                />
            </RelativeLayout>
        </LinearLayout>


    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent"
                    android:layout_weight="0.5">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent"
                            android:layout_weight="0.5" android:orientation="horizontal">
                <TextView
                        android:text="TextView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true" android:id="@+id/ID4" android:layout_marginTop="0dp"
                        android:layout_alignParentStart="true" android:layout_marginStart="0dp"
                        android:gravity="center"
                        android:textSize="30sp"
                        android:onClick="nesteMann"
                />
            </RelativeLayout>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent"
                            android:layout_weight="0.5" android:orientation="horizontal">
                <TextView
                        android:text="TextView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true" android:id="@+id/ID3" android:layout_marginTop="0dp"
                        android:layout_alignParentStart="true" android:layout_marginStart="0dp"
                        android:gravity="center"
                        android:textSize="30sp"
                        android:onClick="nesteMann"
                />
            </RelativeLayout>
        </LinearLayout>


    </RelativeLayout>


</LinearLayout>